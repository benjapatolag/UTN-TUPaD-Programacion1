#Ejercicio 1
def imprimir_hola_mundo():
    print("Hola Mundo!")

imprimir_hola_mundo()

#Ejercicio 2
def saludar_usuario(nombre):
    print(f"Hola {nombre}!")

saludar_usuario("Jorge")

#Ejercicio 3
def informacion_personal(nombre, apellido, edad, residencia):
    print(f"Soy {nombre} {apellido}, tengo {edad} años y vivo en {residencia}")

informacion_personal("Benja","Lagos",40, "Rivadavia")

#Ejercicio 4
import math
def calcular_area(radio):
    area = (math.pi)*radio**2
    print(f"El area del circulo es {area}")
def metro_circulo(radio):
    perimetro = 2 * (math.pi)*radio
    print(f"El perimetro del circulo es {perimetro}")

radio = int(input("Ingrese el radio"))
calcular_area(radio)
metro_circulo(radio)

#Ejercicio 5
def segundos_a_horas(segundos):
    horas = segundos / 60
    print(f"Cantidad de hora: {horas}")

segundo = int(input("Ingrese la cantidad de"))
segundos_a_horas(segundo)

#Ejercicio 6
def tabla_multiplicar(numero):
    for i in range (1,10):
        print(f"i * {numero} : {i * numero}")
numero = int(input(f"Ingrese un numero: "))
tabla_multiplicar(numero)

#Ejercicio 7
def operaciones_basicas(a, b):
    suma = a + b
    resta = a - b
    multiplicacion = a * b
    division = a / b
    return (suma, resta, multiplicacion, division)

resultado = operaciones_basicas(10, 2)
print("Suma:", resultado[0])
print("Resta:", resultado[1])
print("Multiplicación:", resultado[2])
print("División:", resultado[3])

#Ejercicio 8
def calcular_imc(peso,altura):
    pesocorporal = peso / (altura**2)
    print(f"Masa corporal: {pesocorporal}")

peso = int(input("Ingrese su peso en kilogramos: "))
altura = int(input("Ingrese su altura en metros: "))
calcular_imc(peso, altura)

#Ejercicio 9
def celsius_a_fahrenheit(celsius):
    fahrenheit = celsius * 9/5 + 32
    print(f"Equivale a {fahrenheit} fahrenheit")

temp = int(input("Ingrese la temperatura en celsius: "))
celsius_a_fahrenheit(temp)

#Ejercico 10
def calcular_promedio(a,b,c):
    promedio = (a+b+c)/3
    print(f"El promedio es: {promedio}")
num1 = int(input("Ingrese el primer numero: "))
num2 = int(input("Ingrese el segundo numero: "))
num3 = int(input("Ingrese el tercer numero: "))
calcular_promedio(num1,num2,num3)